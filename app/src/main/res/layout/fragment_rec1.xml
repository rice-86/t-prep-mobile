<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRec1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:text="Впишите ваш логин"
            android:textSize="@dimen/defTextSize" />

        <EditText
            android:id="@+id/recLoginEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:hint="Введите логин"
            android:maxLength="30" />

        <Button
            android:id="@+id/rec1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:background="@drawable/button_shape"
            android:text="Найти аккаунт"
            android:textColor="@color/tPrepTextColor"
            android:textSize="@dimen/defTextSize" />

    </LinearLayout>

</FrameLayout>