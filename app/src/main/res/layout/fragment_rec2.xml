<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRec2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:text="Придумайте новый пароль"
            android:textSize="@dimen/defTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:text="Пароль должен содержать минимум:\n1. Одну заглавную букву\n2. Одно число\n3. Один специальный символ\nА также минимальной длины в 8 символов"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/recNewPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:hint="Новый пароль"
            android:inputType="textPassword"
            android:maxLength="30" />

        <EditText
            android:id="@+id/repeatRecNewPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:maxLength="30" />

        <Button
            android:id="@+id/rec2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:backgroundTint="@color/tPrepBackColor"
            android:text="Восстановить доступ"
            android:textColor="@color/tPrepTextColor"
            android:textSize="@dimen/defTextSize" />

    </LinearLayout>

</FrameLayout>