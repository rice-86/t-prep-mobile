<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yourSubjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mainMargin"
        android:text="@string/yourSubjectsText"
        android:textSize="@dimen/mainTextSize"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/defaultMargin"
        android:layout_marginHorizontal="@dimen/defaultMargin"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subjectsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </ScrollView>

    <Button
        android:id="@+id/addSubjectButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defaultMargin"
        android:backgroundTint="@color/tPrepBackColor"
        android:text="@string/addSubjectText"
        android:textColor="@color/tPrepTextColor"
        android:layout_gravity="right"
        android:textSize="@dimen/defaultTextSize" />

</LinearLayout>